{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
