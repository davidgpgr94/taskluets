
<div class="row h-100 text-center align-items-center justify-content-center flex-column">
  <div>
    <h1 class="h1">
      Registro
    </h1>
  </div>
  <div class="px-auto w-50 mx-auto">
    <form action="/signup" method="post">
      {{{csrf_input_token}}}
      <div class="form-group">
        <input type="text" name="login" id="login" class="form-control" placeholder="Login" minlength="7" maxlength="7" required="true">
      </div>
      <div class="form-group">
        <input type="email" name="email" id="email" class="form-control" placeholder="Email" required="true">
      </div>
      <div class="form-group input-with-field-icon">
        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="true">
        <div class="field-icon" data-toggle-from="fa-eye" data-toggle-to="fa-eye-slash">
          <span class="fas fa-eye"></span>
        </div>
      </div>
      <div class="form-group input-with-field-icon">
        <input type="password" name="password" id="password" class="form-control" placeholder="Repeat password" required="true">
        <div class="field-icon" data-toggle-from="fa-eye" data-toggle-to="fa-eye-slash">
          <span class="fas fa-eye"></span>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary">Registrarme</button>
      </div>
    </form>
  </div>
</div>

<script src="/javascripts/toggle-input-password.js" type="text/javascript"></script>
